<script>
import wepy from 'wepy'
import dayjs from 'dayjs'
import { connect } from 'wepy-redux'
import api from '../request/api'
import mHeader from '../components/header'

@connect({
  userInfo(state) {
    return state.user.userInfo
  },
  logined(state) {
    return state.user.logined
  },
})
export default class TryPay extends wepy.page {
  config = {
    navigationBarTitleText: '',
    usingComponents: {
      'van-popup': '../vant/popup/index',
    },
  }
  data = {
    showBackPopup: false,
    id: 0,
    payOrderId: 0,
    groupOrderId: 0,
    minutes: 1800,
    couponTimeObj: '00:00',
    phone: '',
    activeConfig: {},
    couseData: [],
    msgArr: [],
    orderMode: 1,
  }
  components = {
    mHeader,
  }
  methods = {
    closePopup() {
      this.showBackPopup = false
    },
    clickLevelSubmit() {
      if (this.payOrderId) {
        this.continuePay()
      } else {
        this.submitPay()
      }
      this.showBackPopup = false
    },
    getPhoneNumber(v) {
      console.log(v)
      this.updateUserPhoneByMa(v.detail)
    },
  }
  events = {}
  watch = {}
  computed = {
    height() {
      return 46 + wepy.$instance.globalData.systemInfo.statusBarHeight
    },
    hasPhone() {
      if (this.userInfo && this.userInfo.phone) return true
      return false
    },
  }

  getCourse() {
    //正式1173617051253350402,1173617224285790210,1173617415734796289， 测试1171996022454611970，1173422970690228225，1173505182493532161
    api.course
      .getCourse({
        idsStr: wepy.$appConfig.tryIdsStr,
      })
      .then(({ data }) => {
        this.couseData = data.resultData.filter((e) => {
          return e.courseId == this.id
        })
        this.couseData = this.couseData[0]
        this.getFourActiveConfig()
        this.$apply()
      })
  }

  getFourActiveConfig() {
    api.order
      .fourActiveConfig({
        courseId: this.couseData.courseId,
      })
      .then(({ data }) => {
        this.activeConfig = data.resultData[0] ? data.resultData[0] : {}
        if (this.activeConfig.opentime) {
          this.activeConfig.opentime = dayjs(this.activeConfig.opentime).format(
            'MM月DD日'
          )
        }
        this.$apply()
      })
  }

  getUserGroupMsg() {
    api.order.getUserGroupMsg().then(({ data }) => {
      this.msgArr = data.resultData
      this.$apply()
    })
  }

  updateUserPhoneByMa(params) {
    api.user
      .updateUserPhoneByMa({
        encryptedData: params.encryptedData,
        iv: params.iv,
      })
      .then(({ data }) => {
        wepy.$store.dispatch({
          type: 'UPDATE_USERINFO',
          payload: { ...this.userInfo, phone: data.resultData.phone },
        })
        this.submitPay()
      })
  }

  submitPay() {
    let { activeConfig, groupOrderId, orderMode } = this
    let courseId = this.id
    let params = {
      wxMa: true,
      courseId,
      orderMode,
    }
    if (activeConfig.id) {
      params.activeId = activeConfig.id
    }

    if (groupOrderId) {
      params.groupOrderId = groupOrderId
    }

    wx.showLoading({
      title: '加载中...', //提示的内容,
      mask: true, //显示透明蒙层，防止触摸穿透,
    })
    // eslint-disable-next-line no-unused-vars
    api.order.newOrder(params).then(({ data }) => {
      let {
        timeStamp,
        nonceStr,
        signType,
        paySign,
        packageValue,
      } = data.resultData
      wx.hideLoading()
      wx.requestPayment({
        timeStamp, //时间戳从1970年1月1日00:00:00至今的秒数,即当前的时间,
        nonceStr, //随机字符串，长度为32个字符以下,
        package: packageValue, //统一下单接口返回的 prepay_id 参数值，提交格式如：prepay_id=*,
        signType, //签名算法，暂支持 MD5,
        paySign, //签名,具体签名方案参见小程序支付接口文档,
        success: (res) => {
          this.payOrderId = data.resultData.orderId
          wx.navigateTo({
            url: `/pages/trySuccess?id=${data.resultData.orderId}`,
          })
        },
        fail: () => {
          this.showBackPopup = true
        },
        complete: () => {},
      })
    })
  }

  continuePay() {
    wx.showLoading({
      title: '加载中...', //提示的内容,
      mask: true, //显示透明蒙层，防止触摸穿透,
    })
    api.order
      .pay({
        wxMa: true,
        orderId: this.payOrderId,
      })
      .then(({ data }) => {
        let {
          timeStamp,
          nonceStr,
          signType,
          paySign,
          packageValue,
        } = data.resultData
        wx.hideLoading()
        wx.requestPayment({
          timeStamp, //时间戳从1970年1月1日00:00:00至今的秒数,即当前的时间,
          nonceStr, //随机字符串，长度为32个字符以下,
          package: packageValue, //统一下单接口返回的 prepay_id 参数值，提交格式如：prepay_id=*,
          signType, //签名算法，暂支持 MD5,
          paySign, //签名,具体签名方案参见小程序支付接口文档,
          success: (res) => {
            this.payOrderId = data.resultData.orderId
            wx.navigateTo({
              url: `/pages/trySuccess?id=${data.resultData.orderId}&type=${this.orderMode}`,
            })
          },
          fail: () => {
            this.showBackPopup = true
          },
          complete: () => {},
        })
      })
  }

  TimeDown() {
    //相差的总秒数
    var modulo = this.minutes
    //分钟
    var minutes = Math.floor(modulo / 60)
    minutes = minutes < 10 ? '0' + minutes : minutes
    //秒
    var seconds = modulo % 60
    seconds = seconds < 10 ? '0' + seconds : seconds
    //输出到页面
    this.couponTimeObj = `${minutes}:${seconds}`
    //延迟一秒执行自己
    setTimeout(() => {
      if (modulo > 0) {
        this.minutes -= 1
        this.TimeDown()
      } else {
        this.couponTimeObj = '00:00'
      }
      this.$apply()
    }, 1000)
  }

  onLoad(option) {
    this.id = option.id
    this.orderMode = option.orderMode
    this.payOrderId = option.orderId
    this.groupOrderId = option.groupOrderId
  }
  onShow() {
    this.getCourse()
    this.TimeDown()
    this.getUserGroupMsg()
  }
}
</script>

