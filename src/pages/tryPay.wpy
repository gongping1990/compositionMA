        </view>
        <view class="_pay-header-item">
          <text class="_pay-header-item_title">{{ couponTimeObj }}</text>
          <text class="_pay-header-item_text">剩余支付时间</text>
        </view>
      </view>
      <view class="_pay-content">
        <view class="_pay-title">
          {{ couseData.courseName }}
        </view>
        <view class="_pay-tag"> {{ activeConfig.opentime }}开课 </view>
        <view class="_pay-info">
          <image class="_pay-avatar" src="{{activeConfig.coverphoto}}" alt="" />
          <view class="_pay-info-right">
            <text>北师大名师授课</text>
            <text>5节AI互动小班课</text>
            <text>5次作文1对1精细评论</text>
          </view>
        </view>
        <view class="_pay-title">现在购买加赠 <text>仅限今日</text></view>
        <image
          class="_pay-banner"
          mode="widthFix"
          src="https://pub.file.k12.vip/tbzw/tryPay/banner.png"
          alt=""
        />
      </view>
      <view class="_pay-nav">
        <view class="_pay-nav-left">
          <view class="_pay-nav-price">
            ￥{{ orderMode == 3 ? '9.9' : couseData.maAlonePrice }}
            <text wx:if="{{orderMode == 3}}">
              ￥{{ couseData.maAlonePrice }}
            </text>
          </view>
          <view class="_pay-nav-text">{{
            orderMode == 3 ? '限时特惠' : '单独购买'
          }}</view>
        </view>
        <view class="_pay-info">
          <button
            class="_pay-btn"
            wx:if="{{!hasPhone}}"
            open-type="getPhoneNumber"
            @getphonenumber="getPhoneNumber"
          >
            立即支付
          </button>
          <view class="_pay-btn" wx:else @tap="clickLevelSubmit">立即支付</view>
        </view>
      </view>
