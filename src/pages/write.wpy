<template>
  <view class="container _write">
    <mHeader title="课时详情" flag="1" bgColor="#FFC000"></mHeader>
    <view
      class="container-scroll"
      style="margin-top:{{height}}px;height: calc(100vh - {{height}}px)"
    >
      <view class="_write-header">
        <view class="_write-header-left">
          <view class="_write-header-title">
            乐小狮写字课
          </view>
          <view class="_write-header-progress">
            <view class="_write-header-bar"></view>
          </view>
        </view>
        <image class="_write-header-cover" src="" />
      </view>
      <scroll-view
        scroll-y
        scroll-with-animation
        style="height: calc(100vh - {{height + 175}}px)"
      >
        <view class="_write-scroll">
          <view class="_write-item" @tap="bindClickItem({{item}})">
            <view class="_write-item-content">
              <view class="_write-item-title">蔡伦造纸</view>
              <view class="_write-item-subtitle">第二课 l 233人已学</view>
            </view>
            <view class="_write-item-right">
              <!-- <view class="_write-item-flower">
                <view class="_write-item-flower-icon"></view>
                x 5
              </view> -->
              <button class="_write-item-btn" form-type="submit">
                去学习
              </button>
            </view>
          </view>
        </view>
      </scroll-view>
    </view>
  </view>
