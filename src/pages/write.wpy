<script>
import wepy from 'wepy'
import mHeader from '../components/header'
export default class Write extends wepy.page {
  config = {
    navigationBarTitleText: ''
  }
  data = {
    lessonId: 0,
    lessonData: {}
  }
  components = {
    mHeader
  }
  methods = {
    bindClickItem(item) {
      let { audioContext, playSound } = this.$parent.globalData
      let url =
        item.type == 1
          ? '/pages/picture?id=' + item.id
          : '/pages/video?id=' + item.id
      if (item.passed) {
        url += '&lookback=1'
      }
      console.log(url)
      if (!item.unlocked) return
      playSound(audioContext, 1)
      if (item.workCp) {
        wx.redirectTo({
          url: `/literacy/l_submitHomework?id=${item.id}`
        })
        return
      }
      if (item.type == 1) {
        wx.navigateTo({ url })
      } else {
        wx.navigateTo({ url })
      }
    }
  }
  events = {}
  watch = {}
  computed = {
    height() {
      return 46 + wepy.$instance.globalData.systemInfo.statusBarHeight
    }
  }

  getThreeLessonInfo() {
    let { api } = this.$parent.globalData
    api.study
      .getThreeLessonInfo({
        lessonId: this.lessonId
      })
      .then(({ data }) => {
        this.lessonData = data.resultData
        this.$apply()
      })
  }
  onLoad(option) {
    this.lessonId = option.id
  }
  onShow() {
    this.getThreeLessonInfo()
  }
}
</script>
