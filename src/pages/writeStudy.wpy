<script>
import wepy from 'wepy'
import createHanziWriterContext from 'hanzi-writer-miniprogram'
import mHeader from '../components/header'
export default class WriteStudy extends wepy.page {
  config = {
    usingComponents: {
      'van-popup': '../vant/popup/index',
      'hanzi-writer-view': '../miniprogram_dist/hanzi-writer-view'
    }
  }
  data = {
    showDialog: false,
    loop: true,
    lessonId: 0,
    calalog: [],
    lessonData: {}
  }
  components = {
    mHeader
  }
  methods = {
    closeDialog() {
      this.showDialog = false
    },
    clickComment() {
      wx.navigateTo({
        url: `/user/completionOfWork?type=1&id=${
          this.lessonData.lessonId
        }`
      })
    },
    clickWorkBtn() {
      wx.navigateTo({
        url: `/user/${
          this.lessonData.type == 1
            ? 'uploadAudioWork'
            : 'uploadImgWork'
        }?id=${this.lessonData.lessonId}`
      })
    },
    clicNextLesson() {
      if(this.lessonData.maxUnLock) {
        this.showDialog = true
        return
      }
      this.getWritingLessonInfo(this.lessonData.nextLessonId)
    },
    changeLoop() {
      this.loop = !this.loop
      this.setUpPlayback()
    }
  }
  events = {}
  watch = {}
  computed = {
    height() {
      return 46 + wepy.$instance.globalData.systemInfo.statusBarHeight
    }
  }

  listWritingLessonCatalog() {
    let { api } = this.$parent.globalData
    api.study
      .listWritingLessonCatalog({
        courseId: this.lessonData.courseId
      }).then(({data}) => {
        this.calalog = data.resultData
        this.$apply()
      })
  }

  setUpPlayback() {
    let { api } = this.$parent.globalData
    api.study.setUpPlayback()
  }
  getWritingLessonInfo(lessonId) {
    let { api } = this.$parent.globalData
    api.study
      .getWritingLessonInfo({
        lessonId: lessonId || this.lessonId
      })
      .then(({ data }) => {
        this.lessonData = data.resultData
        this.loop = data.resultData.playback
        this.listWritingLessonCatalog()
        this.$apply()
      })
  }
  onLoad(option) {
    this.lessonId = option.id
    this.writerCtx = createHanziWriterContext({
      id: 'hz-writer',
      character: '文',
      page: this.$wxpage,
      padding: 7
    })
    this.writerCtx.loopCharacterAnimation()
  }
  onShow() {
    this.getWritingLessonInfo()
  }
}
</script>
