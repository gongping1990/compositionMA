        <view>查看老师点评</view>
      </view>
      <view class="write-btn" wx:if="{{lessonData.passed && lessonData}}" @tap="clicNextLesson">
        <view>下一课</view>
      </view>
      <view class="write-btn" wx:if="{{!lessonData.passed}}" @tap="clickWorkBtn">
        <view>上交作业</view>
        <text>（自动解锁下节）</text>
      </view>
