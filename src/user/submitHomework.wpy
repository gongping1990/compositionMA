        <!--wx:if="{{!cardDetail.todayCard && cardDetail.todayLearned && lessonDetail.canCard}}"></view>-->
        <!--</view>-->
        <view class="p-submitHomework-card" @tap="toJump">
          <image
            class="-card-img"
