                <!--@tap="lookWorkDetail({{workDetail}})"-->
              <!--&gt;-->
                <!--<image-->
                  <!--class="-img"-->
                  <!--src="https://pub.file.k12.vip/tbzw/1.5/work/zybz-icon-review@2x.png"-->
                <!--&gt;</image>-->
