@import '../common/index.wxss';
:host {
  -webkit-flex: 1;
  flex: 1;
}

.van-tabbar-item {
  position: relative;
  color: #ccc6bf;
  height: 100%;
  display: -webkit-flex;
  display: flex;
  line-height: 1;
  font-size: 10px;
  -webkit-align-items: center;
  align-items: center;
  -webkit-flex-direction: column;
  flex-direction: column;
  -webkit-justify-content: center;
  justify-content: center;
}

.van-tabbar-item__icon {
  font-size: 18px;
  position: relative;
}

.van-tabbar-item__icon--dot::after {
  top: 0;
  right: -8px;
  width: 8px;
  height: 8px;
  content: ' ';
  position: absolute;
  border-radius: 100%;
  background-color: #f44;
}

.van-tabbar-item__icon image {
  margin-bottom: 5px;
  width: 22px;
  height: 22px;
  display: block;
}

.van-tabbar-item--active {
  color: #1989fa;
}
